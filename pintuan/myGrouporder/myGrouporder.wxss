.app {
    position: fixed;
    width: 100%;
    height: 100%;
}
.order-item {
    position: relative;
    border-bottom: 2rpx solid #eee;
    min-height: 250rpx;
    border-top: 30rpx solid #f6f6f6;
}
.order-item:first-child {
    border-top: 0;
}
.order-item:last-child {
    border-bottom: 30rpx;
}
.order-item-info {
    margin-bottom: 15rpx;
}
.order-goods-info {
    width: 477rpx;
}
.order-goods-name {
    margin-top: 35rpx;
    color: #393939;
    font-size: 36rpx;
}
.order-goods-spec {
    color: #666464;
}
.order-goods-price {
    font-size: 36rpx;
    color: #666;
}
.order-goods-num {
    color: #666464;
    font-size: 28rpx;
    top: 170rpx;
    right: 40rpx;
}
.order-item-subtotal {
    text-align: right;
    padding-right: 15rpx;
}
.order-item-subtotal > text {
    font-size: 28rpx;
    margin-right: 25rpx;
}
.order-operate {
    border-top: 1px solid #ececec;
}
.order-operate > button {
    float: right;
    height: 55rpx;
    width: auto;
    text-align: center;
    line-height: 55rpx;
    margin-left: 20rpx;
    font-size: 24rpx;
    background: #fff;
    color: #f52424;
    border-radius: 50rpx;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
    border: 1px solid #f52424;
}
.order-operate > button.style1 {
    background: #448aca;
}
.order-operate > text {
    color: #666;
    font-size: 24rpx;
    line-height: 75rpx;
    padding-left: 45rpx;
    float: left;
}
.group-suc {
    height: 150rpx !important;
    width: 150rpx !important;
    position: absolute;
    top: 0rpx;
    right: 100rpx;
}
.receipt-info {
    font-size: 30rpx;
}
.receipt-close {
    height: 68rpx;
    width: 203rpx;
    line-height: 68rpx;
    font-size: 36rpx;
}
.newsp_shop_name {
    width: 100%;
    height: 94rpx;
    line-height: 94rpx;
    background: #fff;
    font-size: 30rpx;
    color: #888;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding: 0 23rpx 0 45rpx;
    box-sizing: border-box;
}
.newsp_shop_title {
    color: #050505;
}
.orderType > view {
    width: 33.33%;
}
.new_group_ordertop {
    position: absolute;
    z-index: 100;
    background: #fff;
    width: 100%;
    text-align: center;
}
.new_group_ordertop > view {
    float: left;
    width: 33.33%;
    line-height: 75rpx;
    box-sizing: border-box;
}
.line_r {
    border-right: 1px solid #ececec;
}
.line_b {
    border-bottom: 1px solid #ececec;
}
.trade-type {
    top: 0;
    right: 45rpx;
}
.group_oldprice {
    color: #a3a3a3;
    font-size: 24rpx;
    text-decoration: line-through;
    margin-left: 5rpx;
}
.icon-close {
    color: #f6f6f6;
    font-size: 50rpx;
    position: absolute;
    top: -31rpx;
    right: -32rpx;
}