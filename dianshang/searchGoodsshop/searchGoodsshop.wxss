.takshop-search {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: #f5f5f5;
}
.takshop-search-box {
    height: 125rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 24rpx 15rpx;
    font-size: 30rpx;
}
.takshop-search-l {
    background: #ededed;
    width: 557rpx;
    height: 100%;
    float: left;
}
.takshop-search-r {
    background: #959595;
    color: #fff;
    width: 140rpx;
    height: 80rx;
    line-height: 80rpx;
    text-align: center;
    float: left;
}
.takshop-search-l > i {
    padding-left: 16rpx;
    float: left;
    font-size: 35rpx;
}
.takshop-search-l > input {
    border: 0;
    height: 100%;
    width: 460rpx;
    padding-left: 16rpx;
    background: #ededed;
    float: left;
}
.apposhop-list {
    width: 100%;
    height: calc(100% - 165rpx);
}