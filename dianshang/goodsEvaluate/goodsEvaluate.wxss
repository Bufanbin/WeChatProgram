.app {
    position: absolute;
    width: 100%;
    height: 100%;
}
.evaluate-head {
    overflow: hidden;
    padding-bottom: 25rpx;
    border-bottom: 2rpx solid #eee;
}
.evaluate-head view {
    overflow: hidden;
    margin-left: 32rpx;
}
.evaluate-head button {
    width: auto;
    float: left;
    height: 59rpx;
    line-height: 59rpx;
    font-size: 30rpx;
    padding: 0 35rpx;
    margin-top: 17.5rpx;
    margin-right: 15rpx;
    color: #4a4a4a;
    background: #ffddd4;
}
.bad-btn > button:nth-child(1) {
    background: #e5e5e5;
}
.evaluate-head button.select {
    background: #ef5b5b;
    color: #fff;
}
.evaluate-body {
    display: inline-block;
    height: calc(100% - 77rpx);
    width: 100%;
}
.evaluate-info {
    height: 98rpx;
}
.evaluate-avatar {
    width: 98rpx;
    height: 98rpx;
}
.evaluate-nickname {
    font-size: 36rpx;
}
.evaluate-detail {
    color: #303030;
    font-size: 30rpx;
}
.evaluate-time {
    font-size: 28rpx;
    padding-left: 0;
}
.reply-arrow {
    border-color: #ededed;
    border-left-color: transparent;
    border-right-color: transparent;
}
.evaluate-replay {
    padding-left: 15rpx;
    color: #2a2a2a;
    font-size: 18rpx;
}
.evaluate-replay > text {
    padding: 25rpx 20rpx;
    display: block;
    background: #ededed;
    font-size: 28rpx;
}
.evaluate-item {
    padding: 0 35rpx 30rpx;
    border-bottom: 2rpx solid #eee;
}
.evaluate-item:last-child {
    border-bottom: 0;
}