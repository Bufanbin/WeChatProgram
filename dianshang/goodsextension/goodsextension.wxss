.app {
    width: 100%;
    height: 100%;
}
.goodsList {
    width: 100%;
    height: 100%;
}
.goods-item {
    width: 100%;
    margin-bottom: 10rpx;
    border-bottom: 12rpx #f0f0f0 solid;
    background: #fff;
}
.goods-top-info {
    width: 100%;
    background: #fff;
}
.goods-img {
    float: left;
    width: 190rpx;
    height: 190rpx;
    margin: 23rpx 28rpx 0 29rpx;
}
.goods-con {
    float: left;
    width: calc(100% - 247rpx);
    display: -webkit-flex;
    align-items: center;
}
.goods-con-left {
    float: left;
    width: 73.8%;
    padding: 23rpx 14rpx 50rpx 0;
    border-right: 2rpx #eee solid;
    box-sizing: border-box;
}
.goods-name {
    width: 100%;
    min-height: 80rpx;
    margin-top: 15rpx;
    font-size: 30rpx;
    color: #373737;
}
.price-box {
    margin-top: 14rpx;
}
.goods-price {
    font-size: 40rpx;
    color: #fd5757;
}
.goods-sale {
    font-size: 26rpx;
    color: #9e9e9e;
    margin-left: 22rpx;
}
.goods-con-right {
    float: left;
    width: 26.2%;
    box-sizing: border-box;
}
.commission {
    text-align: center;
    font-size: 30rpx;
    color: #3d3d3d;
}
.cash {
    margin-top: 32rpx;
    color: #ff7d27;
}
.goods-bottom-info {
    width: 100%;
    height: 94rpx;
    line-height: 94rpx;
    text-align: center;
    border-top: 2rpx #eee solid;
    font-size: 30rpx;
    color: #575757;
    background: #fff;
}
.goods-bottom-info > image {
    width: 38rpx;
    height: 35rpx;
    vertical-align: middle;
    margin-top: -10rpx;
}
.goods-bottom-info > text {
    margin-left: 22rpx;
}